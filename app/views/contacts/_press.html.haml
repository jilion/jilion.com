- contact = contact(Contact::Press)
.form_box#press{ :style => contact.errors.empty? ? 'display:none' : 'display:block', :class => contact.errors.empty? ? '' : 'errors' }
  %h2 Press
  .intro
    %p= "Use the form below to contact us:"
  - semantic_form_for :contact, contact, :url => contacts_path, :html => { :multipart => true } do |f|
    - f.inputs do
      = f.input :_type, :as => :hidden
      = f.input :email, :required => true, :label => "Your email"
      = f.input :message, :as => :text, :required => true, :label => "Your message"
    
    - f.buttons do
      = f.commit_button "Submit", :class => "left"
      %li.spinner{ :style => "display:none" }
        -#= image_tag "/images/contact/spinner.gif", :alt => ""
        %img{ :src => "/images/contact/spinner.gif", :alt => "" }