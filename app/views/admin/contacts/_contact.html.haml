%tr{ :class => cycle("alt", "") }
  %td
    - if contact.file?
      - link_to admin_contact_path(contact), :class => "attachment" do
        %span="Attachment"
  %td
    = link_to "##{contact.issue}", admin_contact_path(contact)
  %td= contact.type.to_s.gsub(/Contact::/,'')
  %td= mail_to contact.email
  %td= contact.state
  %td
    - if contact.deal?
      = contact.budget
    - else
      = "Not applicable"
  %td= l contact.created_at, :format => :long
  %td 
    - if contact.replied?
      %em= "Replied"