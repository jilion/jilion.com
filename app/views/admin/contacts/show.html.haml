%h2= @contact.class.to_s.demodulize

= link_to "Back to the contact list", admin_contacts_path
%hr

%ul.contact
  %li
    %strong= "Issue:"
    = @contact.issue
    - if @contact.job?
      %li
        %strong= "Job ref:"
        = link_to @contact.job_id, admin_job_path(@contact.job_id)

  %li
    %strong= "Email:"
    = @contact.email
  %li
    %strong= "Status:"
    = @contact.state.humanize
  %li
    %strong= "Message:"
    = @contact.message
  - if @contact.file.present?
    %li
      %strong= "Attachment:"
      = link_to @contact.file_filename, @contact.file_url
  %li
    %strong= "Submitted on:"
    = l @contact.created_at, :format => :long

  %p= reply_link(@contact)
  %p= archive_button(@contact) unless @contact.archived?

%hr
= link_to "Back to the contact list", admin_contacts_path