!!! strict
%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= yield :title
    
    %meta{ "http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8" }
    
    %link{ :href => "/stylesheets/sublime/video/style.css", :type => "text/css", :media => "screen", :rel => "stylesheet" }
    /[if lte IE 6]
      %meta{ "http-equiv" => "Refresh", :content => "0;url=/ie" }
      %style{ :type => "text/css", :media => "screen" }
        == body {background:#fff;display:none;}
  %body
    = yield
    
    
    %script{ :src => "/javascripts/sublime/video/prototype.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/sublime/video/application.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/sublime/video/s2.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/sublime/video/drag.js", :type => "text/javascript" }

    - if Rails.env.production?
      == <script type="text/javascript">
      == var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      == document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      == </script>
      == <script type="text/javascript">
      == try {
      == var pageTracker = _gat._getTracker("UA-10280941-1");
      == pageTracker._setDomainName(".jilion.com");
      == pageTracker._trackPageview();
      == } catch(err) {}</script>