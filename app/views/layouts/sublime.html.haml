%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= "Jilion - #{yield :title}"
    %meta{ :charset => "utf-8"}
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "chrome=1" }
    -#%meta{ "http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8" }
    = include_stylesheets :sublime
    /[if gte IE 7]
      = stylesheet_link_tag "sublime/video/ie7", :cache => "/assets/ie7"
    /[if lte IE 6]
      = stylesheet_link_tag "sublime/video/ie6", :cache => "/assets/ie6"
