!!! strict
%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= t 'title'
    
    %meta{ "http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8" }
    
    - if controller_name == 'contacts'
      == <!--[if (!IE)|(gte IE 8)]><!-->
      = stylesheet_link_tag "style", :cache => "/assets/style-datauri"
      == <!--<![endif]-->
      /[if gte IE 7]
        = stylesheet_link_tag "style", :cache => "/assets/style"
    - else
      = include_stylesheets :style
    /[if gte IE 7]
      = include_stylesheets :style_ie, :embed_assets => false
      == <script type="text/javascript">var curvyCornersNoAutoScan = true;</script>
      = javascript_include_tag "curvycorners", :cache => "/assets/curvycorners"
    /[if lte IE 6]
      %meta{ "http-equiv" => "Refresh", :content => "0;url=/ie" }
      %style{ :type => "text/css", :media => "screen" }
        == body {background:#fff;display:none;}
    == <script type="text/javascript" src="#{request.protocol}use.typekit.com/ibz5qib.js"></script>
    == <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
  %body
    #global
      #logo_backlights
      #back
      #main
        #header
          %h1
            - link_to "http://jilion.com" do
              %span= 'Jilion'
          %ul#menu
            %li.blog
              - link_to "http://blog.jilion.com" do
                %strong
                  %span.icon= 'Blog'
                %span.corner
        = yield
        .spacer
    #footer
      = t 'footer'
    #map_global{ :style => "display:none" }
      #map_background
      #map_overlay
        #map_wrap
        
    = include_javascripts :application
    - if controller_name != 'contacts'
      %script{ :src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript" }
    - google_analytics