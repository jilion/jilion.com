!!!5
%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= "#{t 'title'}#{yield :title}"

    %meta{ "http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8" }

    = stylesheet_link_tag 'style'
    -#- if controller_name == 'contacts'
    -#  == <!--[if (!IE)|(gte IE 8)]><!-->
    -#  = stylesheet_link_tag "style", :cache => "/assets/style-datauri"
    -#  == <!--<![endif]-->
    -#  /[if gte IE 7]
    -#    = stylesheet_link_tag 'style'
    -#- else
    -#  = include_stylesheets :style
    /[if gte IE 7]
      = stylesheet_link_tag 'ie'
      = javascript_tag "var curvyCornersNoAutoScan = true;"
      = javascript_include_tag 'curvycorners'
    /[if lte IE 6]
      %meta{ "http-equiv" => "Refresh", :content => "0;url=/ie" }
      %style{ :type => "text/css", :media => "screen" }
        == body {background:#fff;display:none;}
    = javascript_include_tag "//use.typekit.com/odd6rcy.js"
    = javascript_tag "try{Typekit.load();}catch(e){}"
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
  %body
    #dm_banner
      = link_to "http://blog.jilion.com/2013/12/10/dailymotion-acquires-jilion" do
        %h2= "Jilion joins Dailymotion"
    #global
      #logo_backlights
      #back
      #main
        #header
          %h1
            = link_to root_url do
              %span= 'Jilion'
          %ul#menu
            %li.blog
              = link_to "http://blog.jilion.com" do
                %strong
                  %span.icon= 'Blog'
                %span.corner
        = yield
        .spacer
    #footer= "Copyright © 2009-#{Time.now.utc.year} Jilion® SA"
    #map_global{ style: "display:none" }
      #map_background
      #map_overlay
        #map_wrap
    - if params[:page] == 'home'
      = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag 'application'
